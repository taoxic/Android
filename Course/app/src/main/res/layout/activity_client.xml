<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:id="@+id/ll">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:text="请输入："/>
    <AutoCompleteTextView
        android:layout_width="match_parent" android:id="@+id/attv"
        android:layout_height="wrap_content" android:completionThreshold ="1"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:onClick="up" android:text="pre"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:onClick="down" android:text="next"/>

<ListView
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:id="@+id/tlist"></ListView>

</LinearLayout>
