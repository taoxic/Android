<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <Button android:text="创建数据库" android:layout_width="match_parent"
        android:layout_height="wrap_content"  android:onClick="createdb"/>
    <Button android:text="输入数据库" android:layout_width="match_parent"
        android:layout_height="wrap_content"  android:onClick="putdb"/>
    <Button android:text="输出数据库" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:onClick="outdb" />
    <AutoCompleteTextView
        android:layout_width="match_parent" android:id="@+id/attv"
        android:layout_height="wrap_content" android:completionThreshold ="1" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/tnum" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/tyzm"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="40dp" android:id="@+id/iv"/>
    <Button
        android:layout_width="match_parent" android:text="得到验证码"
        android:layout_height="wrap_content" android:id="@+id/gyzm"/>
    <Button
        android:layout_width="match_parent" android:text="查询" android:id="@+id/btre"
        android:layout_height="wrap_content" />
</LinearLayout>
